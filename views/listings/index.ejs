<% layout('layouts/boilerplate') %>
    <style>
        #filters {
            display: flex;
            align-items: center;
            overflow-x: auto;
            padding: 12px 16px;
            background-color: #fff;
            border-bottom: 1px solid #ddd;
            scroll-behavior: smooth;
            gap: 16px;
        }

        #filters::-webkit-scrollbar {
            display: none;
        }

        .filter {
            flex: 0 0 auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 72px;
            text-align: center;
            font-size: 12px;
            color: #717171;
            cursor: pointer;
            padding: 4px 0;
            border-bottom: 2px solid transparent;
            transition: all 0.2s ease-in-out;
        }

        .filter i {
            font-size: 18px;
            margin-bottom: 4px;
            color: #444;
        }

        .filter.active {
            border-bottom: 2px solid #FF385C;
            color: #000;
            font-weight: 500;
        }

        .filter:hover {
            color: #000;
        }

        .tax-toggle {
            flex: 0 0 auto;
            display: flex;
            align-items: center;
            padding-left: 10px;
            border-left: 1px solid #ddd;
            margin-left: 10px;
        }

        .form-switch {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 13px;
        }

        .form-check-input {
            width: 36px;
            height: 20px;
            cursor: pointer;
            accent-color: #FF385C;
        }

        .form-check-label {
            display: flex;
            flex-direction: column;
            line-height: 1.2;
        }

        .toggle-title {
            font-weight: 600;
            color: #222;
            font-size: 13px;
        }

        .toggle-subtitle {
            font-size: 11px;
            color: #717171;
            margin-top: 1px;
        }
    </style>

    <div id="filters">
        <div class="filter active"><i class="fa-solid fa-house-chimney"></i>
            <p>Farms</p>
        </div>
        <div class="filter"><i class="fa-solid fa-mountain-sun"></i>
            <p>Cabins</p>
        </div>
        <div class="filter"><i class="fa-solid fa-binoculars"></i>
            <p>Amazing views</p>
        </div>
        <div class="filter"><i class="fa-solid fa-city"></i>
            <p>Iconic cities</p>
        </div>
        <div class="filter"><i class="fa-solid fa-water-ladder"></i>
            <p>Pools</p>
        </div>
        <div class="filter"><i class="fa-solid fa-umbrella-beach"></i>
            <p>Beachfront</p>
        </div>
        <div class="filter"><i class="fa-solid fa-tree"></i>
            <p>Treehouses</p>
        </div>
        <div class="filter"><i class="fa-solid fa-hotel"></i>
            <p>Luxury</p>
        </div>
        <div class="filter"><i class="fa-solid fa-globe"></i>
            <p>World Views</p>
        </div>
        <div class="filter"><i class="fa-solid fa-water"></i>
            <p>Lakefront</p>
        </div>
        <div class="filter"><i class="fa-solid fa-mug-saucer"></i>
            <p>B&B</p>
        </div>
        <div class="filter"><i class="fa-solid fa-snowflake"></i>
            <p>Arctic</p>
        </div>

        <div class="tax-toggle">
            <div class="form-switch">
                <input class="form-check-input" type="checkbox" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">
                    <span class="toggle-title">Total price</span>
                    <span class="toggle-subtitle">Before taxes</span>
                </label>
            </div>
        </div>


    </div>



    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-3 mt-3">
        <% for(let listing of allListing){ %>
            <a class="listing-link" href="/listings/<%= listing._id %>">
                <div class="card listing-card col ">
                    <img src="<%= listing.image.url %>" class="card-img-top card-image mt-3" alt="listingimage"
                        style="height: 20rem;">
                    <div class="card-img-overlay"><i class="fa-regular fa-heart"></i></div>
                    <div class="card-body mt-2">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %>
                                <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>
    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (let info of taxInfo) {
                const currentDisplay = window.getComputedStyle(info).display;
                if (currentDisplay === "none") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        });
    </script>