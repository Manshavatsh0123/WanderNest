<% layout('layouts/boilerplate') %>
    <style>
        #filters {
            display: flex;
            align-items: center;
            overflow-x: auto;
            padding: 12px 16px;
            background-color: #fff;
            border-bottom: 1px solid #ddd;
            scroll-behavior: smooth;
            gap: 16px;
        }

        #filters::-webkit-scrollbar {
            display: none;
        }

        .filter {
            flex: 0 0 auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 72px;
            text-align: center;
            font-size: 12px;
            color: #717171;
            cursor: pointer;
            padding: 4px 0;
            border-bottom: 2px solid transparent;
            transition: all 0.2s ease-in-out;
        }

        .filter i {
            font-size: 18px;
            margin-bottom: 4px;
            color: #444;
        }

        .filter.active {
            border-bottom: 2px solid #FF385C;
            color: #000;
            font-weight: 500;
        }

        .filter:hover {
            color: #000;
        }

        .tax-toggle {
            flex: 0 0 auto;
            display: flex;
            align-items: center;
            padding-left: 10px;
            border-left: 1px solid #ddd;
            margin-left: 10px;
        }

        .form-switch {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 13px;
        }

        .form-check-input {
            width: 36px;
            height: 20px;
            cursor: pointer;
            accent-color: #FF385C;
        }

        .form-check-label {
            display: flex;
            flex-direction: column;
            line-height: 1.2;
        }

        .toggle-title {
            font-size: 16px;
            display: block;
            margin-bottom: 4px;
        }

        .toggle-subtitle {
            font-size: 14px;
            font-weight: 500;
        }

        .tax-info {
            font-size: 12px;
            color: #777;
        }

        .hero-section {
            width: 100%;
        }

        .hero-bg {
            height: 60vh;
            width: 100%;
            background-image: url('/images/WanderNestPage.jpg');
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .hero-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.4);
        }

        .hero-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
        }

        .hero-small {
            letter-spacing: 5px;
            font-size: 12px;
            opacity: .9;
            margin-bottom: 10px;
        }

        .hero-title {
            font-size: 52px;
            font-weight: 300;
            margin-bottom: 8px;
        }

        .hero-sub {
            letter-spacing: 3px;
            font-size: 13px;
            margin-bottom: 22px;
            opacity: .9;
        }

        .listing-card {
            border: none;
            border-radius: 14px;
            overflow: hidden;
            transition: 0.25s ease;
        }

        /* .listing-card:hover {
            transform: translateY(-3px);
        } */

        .card-image {
            height: 18rem;
            object-fit: cover;
            border-radius: 14px;
        }

        .card-body {
            padding: 10px 2px;
        }

        .card-text b {
            font-size: 16px;
            color: #222;
        }

        .card-text {
            font-size: 14px;
            color: #555;
        }

        .tax-info {
            font-size: 12px;
            color: #888;
        }
        
    </style>

    <div class="hero-section full-width">
        <div class="hero-bg">

            <div class="hero-overlay"></div>

            <div class="hero-content">

                <p class="hero-small">WELCOME TO</p>

                <h1 class="hero-title">WanderNest</h1>

                <p class="hero-sub">Resort & Travel Stays</p>
            </div>
        </div>
    </div>

    <div class="container mt-2">

        <div class="text-center mt-4 mb-4">
            <h3 class="fw-bold hero-title">Explore Our Stays</h3>
            <p class="text-muted">
                Discover comfortable and affordable places to stay
            </p>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">

            <% for(let listing of allListing){ %>

                <div class="col">

                    <a class="listing-link" href="/listings/<%= listing._id %>">

                        <div class="card listing-card h-100">

                            <img src="<%= listing.image.url %>" class="card-img-top card-image" style="height:20rem;">

                            <div class="card-img-overlay">
                                <i class="fa-regular fa-heart"></i>
                            </div>

                            <div class="card-body">

                                <p class="card-text">
                                    <b>
                                        <%= listing.title %>
                                    </b><br>
                                    &#8377; <%= listing.price.toLocaleString("en-IN") %>/ night
                                        <i class="tax-info"> +18% GST</i>
                                </p>
                            </div>


                        </div>

                    </a>

                </div>

                <% } %>

        </div>


    </div>

    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (let info of taxInfo) {
                const currentDisplay = window.getComputedStyle(info).display;
                if (currentDisplay === "none") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        });
    </script>