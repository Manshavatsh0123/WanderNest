<% layout('layouts/boilerplate') %>

<style>
    .auth-wrapper{
        min-height:70vh;
        display:flex;
        align-items:center;
        justify-content:center;
    }

    .auth-card{
        border-radius:12px;
        border:1px solid #e5e7eb;
        background:#fff;
    }

    .auth-title{
        font-size:2rem;
        font-weight:700;
        margin-bottom:8px;
    }

    .auth-subtitle{
        color:#6b7280;
        font-size:0.95rem;
        margin-bottom:25px;
    }

    .form-control{
        height:44px;
        border-radius:8px;
    }

    .form-label{
        font-weight:500;
        margin-bottom:6px;
    }

    
    .btn-main{
        background:#dc2626;
        border:none;
        height:44px;
        border-radius:8px;
        font-weight:600;
        color:white;
    }

    .btn-main:hover{
        background:#b91c1c;
    }
</style>

<div class="auth-wrapper">
    <div class="col-md-5 col-lg-4">
        <div class="card auth-card shadow-sm p-4">

            <h1 class="auth-title text-center">
                Welcome Back
            </h1>
            <p class="auth-subtitle text-center">
                Login to continue to WanderNest
            </p>

            <form action="/login" method="post" novalidate>

                <!-- Username -->
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input 
                        name="username"
                        type="text"
                        class="form-control"
                        placeholder="Enter your username"
                        required
                    >
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input 
                        name="password"
                        type="password"
                        class="form-control"
                        placeholder="Enter your password"
                        required
                    >
                </div>

                <button class="btn btn-main w-100 mt-2">
                    Log in
                </button>

                <p class="text-center mt-3 small">
                    Donâ€™t have an account?
                    <a href="/signup" class="fw-semibold text-decoration-none">
                        Create account
                    </a>
                </p>

            </form>
        </div>
    </div>
</div>
