<% layout('layouts/boilerplate') %>

<div class="row justify-content-center my-5 ">
    <h1 class="text-center mb-4 fw-bold">Create Your WanderNest Account</h1>
    <div class="col-md-6 col-lg-4">
        <div class="card shadow p-4">
            <form action="/login" method="post" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="username" class="form-label">Choose a Username</label>
                    <input name="username" type="text" placeholder="Enter your username" id="username" class="form-control" required>
                    <div class="valid-feedback">Great choice!</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Create a Password</label>
                    <input name="password" type="password" placeholder="Choose a strong password" id="password" class="form-control" required>
                    <div class="valid-feedback">Nice and secure!</div>
                </div>

                <button class="btn btn-success w-100 mt-3">Login</button>
            </form>
        </div>
    </div>
</div>
