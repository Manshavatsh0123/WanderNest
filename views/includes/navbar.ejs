<style>
  .airbnb-nav-link {
    border-radius: 22px;
    transition: background-color 0.2s ease;
  }

  .airbnb-nav-link:hover {
    background-color: #F7F7F7;
    text-decoration: none;
  }

  .airbnb-search-form {
    background-color: #f7f7f7;
    border: 1px solid #ddd;
    border-radius: 999px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.06);
    max-width: 320px;
    height: 44px;
    transition: box-shadow 0.2s ease;
  }

  .airbnb-search-form:focus-within {
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

  .airbnb-search-input {
    border: none;
    outline: none;
    box-shadow: none;
    font-size: 14px;
    background-color: transparent !important;
    color: #333;
  }


  .airbnb-search-input::-webkit-search-cancel-button {
    -webkit-appearance: none;
    appearance: none;
    display: none;
  }

  .airbnb-search-input::placeholder {
    color: #888;
  }


  .airbnb-search-input:focus {
    outline: none;
    box-shadow: none;
    background-color: transparent !important;
  }

  .navbar-nav .btn {
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease-in-out;
  }


  .navbar-nav .btn-outline-dark {
    border: 1px solid #ccc;
    background-color: #fff;
    color: #333;
  }

  .navbar-nav .btn-outline-dark:hover {
    background-color: #f7f7f7;
    border-color: #999;
    color: #111;
  }


  .navbar-nav .btn-dark {
    background-color: #FF385C;
    border-color: #FF385C;
    color: #fff;
  }

  .navbar-nav .btn-dark:hover {
    background-color: #e0314c;
    border-color: #e0314c;
  }


  .navbar-nav .btn-outline-danger {
    color: #FF385C;
    border-color: #FF385C;
    background-color: transparent;
  }

  .navbar-nav .btn-outline-danger:hover {
    background-color: #FFF0F0;
    border-color: #FF385C;
    color: #FF385C;
  }
</style>

<nav class="navbar navbar-expand-md bg-white border-bottom shadow-sm sticky-top py-2">
  <div class="container-fluid">

    <a class="navbar-brand d-flex align-items-center gap-2 text-danger fw-semibold fs-5" href="/listings"
      style="text-decoration: none;">
      <div class="d-flex align-items-center justify-content-center rounded-circle"
        style="width: 36px; height: 36px; background-color: #FFF0F0;">
        <i class="fa-solid fa-location-dot" style="color: #FF385C; font-size: 18px;"></i>
      </div>
      <span style="color: #FF385C; font-weight: 600;">WanderNest</span>
    </a>


    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <div class="navbar-nav d-flex align-items-center gap-2">
        <a class="nav-link fw-medium text-dark px-3 py-2 airbnb-nav-link" href="/listings">
          Explore Stays
        </a>
        <a class="nav-link fw-medium text-dark px-3 py-2 airbnb-nav-link" href="/listings/new">
          Become a Host
        </a>
      </div>




      <div class="navbar-nav ms-auto me-3">
        <form class="search-form d-flex align-items-center gap-2 px-3 py-1 airbnb-search-form" role="search">
          <i class="fa-solid fa-magnifying-glass text-muted fs-6"></i>
          <input class="form-control airbnb-search-input" type="search" placeholder="Search stays, cities..."
            aria-label="Search">
        </form>
      </div>




      <div class="navbar-nav align-items-center gap-2">
        <% if (!currUser) { %>
          <a class="btn btn-outline-dark rounded-pill px-4 py-1" href="/signup">Sign up</a>
          <a class="btn btn-dark rounded-pill px-4 py-1" href="/login">Log in</a>
          <% } %>
            <% if (currUser) { %>
              <a class="btn btn-outline-danger rounded-pill px-4 py-1" href="/logout">Log out</a>
              <% } %>
      </div>

    </div>
  </div>
</nav>