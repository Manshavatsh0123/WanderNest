<style>
  .navbar {
    background: rgba(255, 255, 255, 0.95) !important;
    backdrop-filter: blur(10px);
  }

  .navbar-logo {
    height: 44px;
    width: auto;
    object-fit: contain;
    transition: transform 0.25s ease;
  }

  .navbar-logo:hover {
    transform: scale(1.05);
  }

  .airbnb-nav-link {
    border-radius: 999px;
    padding: 8px 16px;
    font-size: 14.5px;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 6px;
    transition: all 0.25s ease;
  }

  .airbnb-nav-link:hover {
    background-color: #F5F5F5;
    color: #111;
    padding: 6px 28px;
  }

  .navbar-nav .btn {
    font-size: 14px;
    font-weight: 500;
    padding: 7px 16px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 6px;
    transition: all 0.25s ease;
  }

  .navbar-nav .btn i {
    font-size: 13px;
  }

  .navbar-nav .btn-outline-dark {
    border: 1px solid #e0e0e0;
    background-color: #fff;
    color: #333;
  }

  .navbar-nav .btn-outline-dark:hover {
    background-color: #f6f6f6;
  }

  .navbar-nav .btn-dark {
    background-color: #dc2626;
    border-color: #dc2626;
    color: #fff;
    box-shadow: 0 6px 18px rgba(255, 56, 92, 0.3);
  }

  .navbar-nav .btn-dark:hover {
    background-color: #e0314c;
    box-shadow: 0 8px 22px rgba(255, 56, 92, 0.4);
  }

  .navbar-nav .btn-outline-danger {
    color: #FF385C;
    border-color: #FF385C;
  }

  .navbar-nav .btn-outline-danger:hover {
    background-color: #FFF0F0;
  }

  @media (max-width: 768px) {
    .navbar-logo {
      height: 36px;
    }

    .navbar-nav {
      padding-top: 10px;
    }
  }
</style>


<nav class="navbar navbar-expand-md bg-white border-bottom shadow-sm sticky-top py-2">
  <div class="container-fluid">

    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <img src="/images/WanderNest.jpg" alt="WanderNest Logo" class="navbar-logo">
    </a>

    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <div class="navbar-nav d-flex align-items-center gap-2">
        <a class="nav-link airbnb-nav-link" href="/listings">
          Explore Stays
        </a>
        <a class="nav-link airbnb-nav-link" href="/listings/new">
          Become a Host
        </a>
      </div>


      <div class="navbar-nav align-items-center gap-2 ms-auto">
        <% if (!currUser) { %>
          <a class="btn btn-outline-dark" href="/signup">
            <i class="fa-solid fa-user-plus"></i>
            Sign up
          </a>
          <a class="btn btn-dark" href="/login">
            <i class="fa-solid fa-right-to-bracket"></i>
            Log in
          </a>
          <% } %>

            <% if (currUser) { %>
              <a class="btn btn-outline-danger" href="/logout">
                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                Log out
              </a>
              <% } %>
      </div>


    </div>
  </div>
</nav>